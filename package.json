{
  "name": "britecharts",
  "packageManager": "yarn@3.2.0",
  "version": "0.0.0",
  "description": "D3.js based Modular Charting Library",
  "main": "index.js",
  "contributors": [
    {
      "name": "Marcos Iglesias",
      "email": "golodhros@gmail.com"
    },
    {
      "name": "Daler Asrorov",
      "email": "asrorids@gmail.com"
    },
    {
      "name": "Ryan Wholey",
      "email": "rjwholey@gmail.com"
    },
    {
      "name": "Sun Dai",
      "email": "sundaisf@gmail.com"
    },
    {
      "name": "Gago",
      "email": "xeroice@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/britecharts/britecharts.git"
  },
  "keywords": [
    "d3",
    "svg",
    "chart",
    "javascript",
    "es6",
    "es2015",
    "visualizations",
    "data-visualization",
    "interactive-visualizations"
  ],
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=3.2.0"
  },
  "author": "Britecharts Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/britecharts/britecharts/issues"
  },
  "homepage": "http://britecharts.github.io/britecharts/",
  "workspaces": [
    "packages/core",
    "packages/wrappers",
    "packages/react",
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "docs",
          "fix",
          "feat",
          "chore"
        ]
      ]
    }
  },
  "browserslist": "> 0.25%, not dead",
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions",
      "@babel/plugin-proposal-export-default-from",
      "@babel/plugin-proposal-logical-assignment-operators",
      "@babel/plugin-proposal-optional-chaining",
      [
        "@babel/plugin-proposal-pipeline-operator",
        {
          "proposal": "minimal"
        }
      ],
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-do-expressions",
      "@babel/plugin-proposal-function-bind",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:testing-library/react"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "amd": true
    },
    "root": true,
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "requireConfigFile": false,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "babelOptions": {
        "parserOpts": {
          "plugins": [
            "jsx"
          ]
        }
      }
    },
    "globals": {
      "sinon": true
    },
    "rules": {
      "block-scoped-var": 1,
      "comma-style": [
        2,
        "last"
      ],
      "complexity": 1,
      "consistent-this": [
        0,
        "self"
      ],
      "default-case": 1,
      "dot-notation": 0,
      "guard-for-in": 1,
      "keyword-spacing": 1,
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        }
      ],
      "no-alert": 2,
      "no-console": 2,
      "no-debugger": 2,
      "no-div-regex": 1,
      "no-eq-null": 1,
      "no-floating-decimal": 1,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 2
        }
      ],
      "no-nested-ternary": 1,
      "no-param-reassign": 0,
      "no-self-compare": 1,
      "no-throw-literal": 1,
      "no-void": 1,
      "no-unused-vars": [
        1,
        {
          "varsIgnorePattern": "[d3Transition]"
        }
      ],
      "no-underscore-dangle": 0,
      "quotes": [
        2,
        "single"
      ],
      "one-var": [
        1,
        {
          "var": "always",
          "const": "never"
        }
      ],
      "radix": 1,
      "vars-on-top": 1,
      "wrap-iife": [
        2,
        "inside"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.d.ts"
        ],
        "parser": "@typescript-eslint/parser"
      }
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "singleQuote": true,
    "arrowParens": "always",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 70,
          "useTabs": false,
          "trailingComma": "none",
          "arrowParens": "avoid",
          "proseWrap": "never"
        }
      },
      {
        "files": "*.json",
        "options": {
          "printWidth": 70,
          "useTabs": false,
          "trailingComma": "none",
          "tabWidth": 2
        }
      }
    ]
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": [
      "stylelint-config-sass-guidelines",
      "stylelint-config-standard-scss"
    ],
    "rules": {
      "indentation": 4,
      "scss/dollar-variable-colon-space-after": "always",
      "no-descending-specificity": null,
      "selector-class-pattern": null,
      "scss/at-import-no-partial-leading-underscore": null,
      "scss/no-global-function-names": null,
      "max-nesting-depth": 2,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "function",
            "if",
            "each",
            "include",
            "mixin"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint:js",
      "yarn run format"
    ],
    "*.scss": "yarn run lint:styles"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.18.6",
    "@babel/runtime": "^7.4.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "babel-jest": "^29.3.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-async-import": "^2.0.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^4.1.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-testing-library": "^5.5.0",
    "husky": "^7.0.0",
    "jest": "^29.3.1",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": ">=10",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "prettier": "2.5.1",
    "prettier-eslint": "13.0.0",
    "prettier-eslint-cli": "5.0.1",
    "rimraf": "^2.6.3",
    "stylelint": "^14.15.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "4.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "build:core": "yarn workspace @britecharts/core build",
    "build:wrappers": "yarn workspace @britecharts/wrappers build",
    "build:react": "yarn workspace @britecharts/react build",
    "build:docs": "yarn workspace @britecharts/docs build",
    "build:demos": "yarn workspace @britecharts/demos build",
    "build": "yarn run build:core && yarn run build:wrappers && yarn run build:react && yarn run build:docs && yarn run build:demos",
    "check": "yarn run lint:styles && yarn run lint:js && yarn test:once",
    "clean": "yarn workspaces foreach -p run clean && yarn cache clean && rimraf node_modules && yarn",
    "demos": "yarn workspaces foreach -p run demo",
    "test:ci": "yarn workspaces foreach -p run test",
    "test": "yarn workspaces foreach -p run test",
    "test:watch": "yarn workspaces foreach -p run test:watch",
    "docs": "yarn workspace @britecharts/docs start",
    "docs:build": "yarn workspace @britecharts/docs build",
    "format": "prettier --loglevel warn --write \"**/*.js\"",
    "lint:fix": "eslint src/charts/ webpack.*.js --cache --fix",
    "lint:js": "yarn workspaces foreach -p run lint:js",
    "lint:styles": "yarn workspace @britecharts/core lint:styles",
    "lint:old": "yarn eslint --fix --max-warnings=0 --ext js,jsx ./packages/",
    "lint": "yarn workspaces foreach -p run lint",
    "posttest": "yarn run format",
    "start": "yarn workspaces foreach -vpiR run start",
    "stylelint:fix": "stylelint './packages/core/src/styles/**/*.scss' --fix",
    "stylelint": "stylelint './packages/core/src/styles/**/*.scss'",
    "prepare": "husky install"
  }
}
